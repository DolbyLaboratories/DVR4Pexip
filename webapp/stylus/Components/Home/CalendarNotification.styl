[data-component='CalendarNotification'] {


      .wrapperNotification{
        position:fixed;
        background-color: rgba(46,87,139,0.7);
        width: 100%;
        min-height: 70px;
        overflow: hidden;
        padding: 2.5px 0;
        border-radius: 4px;
        position: relative;
        z-index: 9999999;
        color: #fff;
        left:50%
        margin-left:-175px
        opacity: 0.94;
        box-shadow: 2px 2px 10px rgba(0,0,0,0.4);
        width:400px
        margin-top: 20px

        +large(){
          width:800px
          padding: 5px 0
          margin-top:40px
          margin-left:-350px
        }

    .boxIcon{
      width: 70px;
      height: 70px;
      position: absolute;
      top: 50%;
      margin-top: -35px;
      line-height: 60px;
      +large(){
          width: 140px;
          height: 140px;
          margin-top: -70px;
          line-height: 120px;
      }
    }
    img.imgIcon{
      fill: #fff;
      vertical-align: middle;
      margin-top: 10px;
      width: 42px;
      height: 42px;
      margin-left: 14px;
      +large(){
        margin-top: 20px;
        width: 84px;
        height: 84px;
        margin-left: 28px;
      }
    }
    .leftBox{
       width: 70px;
      top: 0;
      left: 0;
      position: absolute;
      bottom: 0;
      +large(){
        width: 140px;
      }
    }
    .boxText{
      width: 80%;
      margin-left: 70px;
      position: relative;
      float: left;
      font-family: Arial, Helvetica, sans-serif, sans-serif;
      font-size: 1em;
      text-align: left;
      padding: 8px 0;
      +large(){
          margin-left: 140px;
          font-size: 2em;
          padding: 16px 0;
      }
    }
    .boxTitle{
      font-size: 2rem;
      font-weight: 300;
      margin-bottom: 2.5px;
      line-height: 2.2rem;
      word-break: break-all;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      +large(){
        font-size:4rem
        line-height: 4.4rem;
      }
      }
      .box-description{
        font-size: 1.15rem;
        +large(){
          font-size: 2.3rem;
        }
      }
  }
}
