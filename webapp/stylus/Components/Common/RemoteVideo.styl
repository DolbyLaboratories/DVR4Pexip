[data-component='RemoteVideo'] {

	background:#000

    .remoteVideoFull,
	.in-call.single-display{
    	position:absolute;
	    z-index: 99;
		top:0;
		right:0
		bottom:0
		left:0
		width:100%
		height:100%
		//margin: 1.5rem auto 4rem
			+large(){
				//margin:3rem auto 8rem
			}
    }
	
	.remoteVideoBox,
	.content-sharing.single-display{
		position:absolute
		border:1px solid #fff
		top:2.7rem
		right:3rem
		height:auto
		z-index:9999
		overflow:hidden
		width:330px

		+large() {
			border:2px solid #fff
    		top:3rem
    		right:3.3rem
    		width:660px
    		height:auto
    	}
	}

	.remoteVideoNone{
		display: none
	}

	.remoteVideo-appear {
		opacity: 0.01;
	}

	.remoteVideo-appear.remoteVideo-appear-active {
		opacity: 1;
		transition: all 1200ms ease;
	}

}
