[data-component='PexipMeeting'] {

  display: table
  width: 100%
  height: 100%
  min-height: 100%
  // background: #000
  color: #000

  .connectMsgTr-appear {
    opacity: 0.01;
  }

  .connectMsgTr-appear.connectMsgTr-appear-active {
    opacity: 1;
    transition: all 1000ms ease;
  }

  .pipVideoBox {
    position: absolute
    height: 190px
    top: 2.7rem
    right: 3rem
    z-index: 9999
    overflow: visible
    width: 330px
    +large() {
      top: 3rem
      right: 3.3rem
      width: 660px
      height: auto
    }
  }

  .pipVideoFull {
    position: absolute
    height: 100%
    top: 0
    right: 0
    width: 100%
    z-index: 999
    overflow: visible
  }

  .logo-box {
    position: absolute
    top: 2.3rem
    left: 2.5rem
    line-height: .5rem
    font-size: 1rem
    z-index: 9999

    +large() {
      top: 3.3rem
      left: 3rem
    }

    p {
      color: #fff;
      font-size: 2rem
      font-weight: 300

      +large() {
        font-size: 4rem
      }
    }

    img.main-logo-large {
      height: 2rem

      +large() {
        height: 4rem
      }
    }

    img {
      height: 1.2rem

      +large() {
        height: 2.4rem
      }
    }

  }

  .time {
    position: absolute
    top: 2.25rem
    right: 2.8rem
    height: 2rem
    font-size: 2rem
    text-align: right
    color: #999
    z-index: 1000
    line-height: 2rem

    +large() {
      height: 3rem
      right: 3rem
      font-size: 4rem
      top: 3rem
      line-height: 4rem

    }

    .clock {
      font-size: 3rem
      line-height: 3rem
      font-weight: 300
      color: #fff

      +large() {
        font-size: 6rem
        line-height: 5rem

      }
    }
  }

  .logo-box-connectMsg {
    position: absolute
    top: 2.5rem
    left: 3rem
    font-size: 1rem
    z-index: 9999
    color: #fff

    +large() {
      top: 3.3rem
      left: 3.5rem
    }

    p {
      color: #fff;
      font-size: 2.2rem
      font-weight: 300

      +large() {
        font-size: 4.4rem
      }
    }

    img {
      height: 2rem

      +large() {
        height: 4rem
      }
    }

    img.locIcon {
      height: 32.5px
      width: 21.65px
      margin-right: 10px
      display: inline
      margin-bottom: 7px
      +large() {
        height: 65px
        width: 43.3px
        margin-right: 20px
        margin-bottom: 14px
      }
    }

  }


}
